<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingTop="8dp">
        <!--        android:background="#f1e4f1"-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible" />

        <CheckBox
            android:id="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ChooseBox"
            android:text=" "
            android:textColor="#8F8F8F"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="40dp"
            android:layout_height="24dp"

            android:textColor="#666872"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="241dp"
            android:layout_toStartOf="@+id/status"
            android:layout_toLeftOf="@+id/desc"
            android:layout_toEndOf="@+id/desc"
            android:layout_toRightOf="@+id/desc"
            android:textColor="#666872"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="241dp"
            android:layout_toStartOf="@+id/Deliver"
            android:layout_toLeftOf="@+id/Deliver"
            android:textColor="#FF0000" />

        <Button
            android:id="@+id/Deliver"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bt_selector"
            android:onClick="Deliver"
            android:layout_alignParentRight="true"
            android:text="详细"
            android:textColor="#FFFFFF" />

<!--    </LinearLayout>-->
    </RelativeLayout>
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textColor="#666872" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DEDEDE" />


<!--    <com.google.android.material.chip.Chip-->
<!--        android:id="@+id/chip"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" />-->
</LinearLayout>